<div class="row">
    <div class="col-md-10">
        <h4>Collection: <%= @collection.name %></h4>
    </div>
    
    <div class="col-md-2">
        <%= form_tag(edit_user_collection_path(current_user, @collection), method: "GET") do %>
            <div><%= submit_tag 'Edit', class: "btn btn-sm btn-primary btn-block" %></div>
        <% end %>
    </div>
</div>

<%= render "users/collections/remaining_cards", remaining_cards: @remaining_cards %>

<%= render "datatables/collection_table", collection: @collection %>

<div class="row">
    <div class="col">
        <h4>Add New Cards</h4>
        <%= render "users/collections/add_form", collection: @collection %>
    </div>
</div>