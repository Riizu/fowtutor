<div class="row">
    <div class="col">
        <h2>Editing: <%= @decklist.name%></h2>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <%= render "decklists/deck_display", decklist: @decklist, cards: @decklist_cards, owned: current_user.id == @decklist.user.id %>

        <% if current_user.id == @decklist.user.id %>
            <%= render "decklists/form", decklist: @decklist, value: "Update Decklist" %>
        <% end %>
    </div>

    <div class="col-md-7">
        <% if current_user.id == @decklist.user.id %>
            <%= render "cards/mini_list" %>
        <% else %>
            <%= render "tags/form", target: @decklist %>
        <% end %>
    </div>
</div>